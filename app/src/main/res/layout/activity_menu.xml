<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/frag_Header"
            android:name="com.example.sales_force.SalesForceHeader"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_title_UserRegister3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text="@string/txt_title_Menu"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_UserRegister3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_RegisterClient_menu"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:onClick="OnClickbuttonCadastrarCliente"
                android:text="@string/but_RegisterClient_menu"
                android:textAlignment="center"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="124dp" />

            <Button
                android:id="@+id/but_ClientMaintenance"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:onClick="OnClickbuttonAdministarCliente"
                android:text="@string/but_ClientMaintenance"
                android:textAlignment="center"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="124dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_RegisterProduct"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:onClick="OnClickbuttonCadastrarProduto"
                android:text="@string/but_RegisterProduct"
                android:textAlignment="center"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="124dp" />

            <Button
                android:id="@+id/but_ProductMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:onClick="OnClickbuttonAdministarProduto"
                android:text="@string/but_ProductMaintenance"
                android:textAlignment="center"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="124dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_RegisterUser"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:onClick="OnClickbuttonCadastrarUsuario"
                android:text="@string/but_RegisterUser"
                android:textAlignment="center"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="124dp" />

            <Button
                android:id="@+id/but_UserMaintenance"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:onClick="OnClickbuttonAdministarUsuario"
                android:text="@string/but_UserMaintenance"
                android:textAlignment="center"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="124dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_RegisterOrder"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:onClick="OnClickbuttonEmDesenvolvimento"
                android:text="@string/but_RegisterOrder"
                android:textAlignment="center"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="124dp" />

            <Button
                android:id="@+id/but_OrderMaintenance"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:onClick="OnClickbuttonEmDesenvolvimento"
                android:text="@string/but_OrderMaintenance"
                android:textAlignment="center"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="124dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>